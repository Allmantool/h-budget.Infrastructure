{
    "scheme": "semantic",
    "versionFile": "./Angular-app/package.json",
    "files": [
        "./package-lock.json"
    ],
    "rules": [
        {
            "trigger": "commit",
            "branch": "hotfix",
            "bump": "build"
        },
        {
            "trigger": "commit",
            "bump": "minor",
            "branch": "master",
            "reset": "build"
        },
        {
            "trigger": "commit",
            "bump": "major",
            "branch": "release",
            "reset": [
                "minor",
                "build"
            ]
        }
    ]
}